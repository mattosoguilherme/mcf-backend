generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String @unique()
  senha String

  @@map("user")
}

model Marmita {
  id             String @id @default(uuid())
  nome           String
  quantidade     Int
  tipo_encomenda String

  @@map("marmita")
}

enum Role {
  ADMIN
  USER
}
