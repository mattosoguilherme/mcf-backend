generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE")
}

model User {
  id    String @id @default(uuid())
  role  Role   @default(USER)
  email String @unique()
  senha String

  @@map("user")
}

model Marmita {
  id             String @id @default(uuid())
  nome           String
  quantidade     Int
  tipo_encomenda String
  status         String @default("AGUARDANDO")

  @@map("marmita")
}

enum Role {
  ADMIN
  USER
}
